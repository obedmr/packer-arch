{
    "variables": {
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/2015.07.01/archlinux-2015.07.01-dual.iso",
        "iso_checksum": "a025ac8e23131b038a0b7f949faeb04d382e5b25",
        "iso_checksum_type": "sha1"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "disable",
            "http_directory": ".",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -Ok https://raw.githubusercontent.com/obedmr/packer-arch/master/install-virtualbox.sh<enter><wait5>",
                "/usr/bin/curl -Ok https://raw.githubusercontent.com/obedmr/packer-arch/master/poweroff.timer<enter><wait5>",
                "/usr/bin/bash ./install-virtualbox.sh<enter>"
            ],
            "disk_size": 20480,
            "hard_drive_interface": "sata",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "shutdown_command": "systemctl start poweroff.timer"
        },
        {
            "type": "vmware-iso",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "http_directory": ".",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -Ok https://raw.githubusercontent.com/obedmr/packer-arch/master/install-vmware.sh<enter><wait5>",
                "/usr/bin/curl -Ok https://raw.githubusercontent.com/obedmr/packer-arch/master/poweroff.timer<enter><wait5>",
                "/usr/bin/bash ./install-vmware.sh<enter>"
            ],
            "disk_size": 20480,
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "shutdown_command": "systemctl start poweroff.timer"
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant",
            "keep_input_artifact": false
        },
        {
            "type": "atlas",
            "only": ["vmware-iso"],
            "artifact": "obedmr/archlinux",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "vmware_desktop",
                "version": "2015.07.01"
            }
        },
        {
            "type": "atlas",
            "only": ["virtualbox-iso"],
            "artifact": "obedmr/archlinux",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "virtualbox",
                "version": "2015.07.01"
            }
        }]
    ]
}
